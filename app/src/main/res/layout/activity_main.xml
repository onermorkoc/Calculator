<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D84242"
                    android:onClick="all_delete"
                    android:text="Ac"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="brace"
                    android:text="()"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="percentage"
                    android:text="%"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="divide"
                    android:text="/"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="seven"
                    android:text="7"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="eight"
                    android:text="8"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="nine"
                    android:text="9"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="delete"
                    android:text="DEL"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="four"
                    android:text="4"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="five"
                    android:text="5"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="six"
                    android:text="6"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="multiply"
                    android:text="x"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    app:cornerRadius="360dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="one"
                    android:text="1"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="two"
                    android:text="2"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="three"
                    android:text="3"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="add"
                    android:text="+"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="zero"
                    android:text="0"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="point"
                    android:text="."
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5E94D6"
                    android:onClick="result"
                    android:text="="
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />

                <Button
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:onClick="minus"
                    android:text="-"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    app:cornerRadius="360dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Calculator"
        android:textColor="@color/text"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center|right"
        android:hint="0"
        android:textColor="@color/text"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/night_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/night_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>